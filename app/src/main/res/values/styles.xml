<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light"></style>

    <!-- Styles -->
    <style name="blueBackgroundText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#efefef</item>
        <item name="android:background">#006699</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="beerProfileHeaderText">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="beerProfileName">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="orangeDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#FFA500</item>
    </style>

    <style name="orangeDividerSmall">
        <item name="android:layout_width">180dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#FFA500</item>
    </style>

    <!-- source http://stackoverflow.com/questions/29357310/android-how-to-hide-progress-circle-in-facebook-login -->
    <style name="fullyTranslucent" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@style/InvisibleProgress</item>
    </style>

    <style name="InvisibleProgress">
        <item name="android:visibility">gone</item>
    </style>

    <style name="OrangeButton" parent="Theme.AppCompat.Light">
        <item name="android:backgroundTint">#FFA500</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">18dp</item>

        <!--comment these margins out before running tests -->
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:layout_marginLeft">-4dp</item>
        <item name="android:layout_marginRight">-4dp</item>
    </style>

    <style name="OrangeButtonOlderVersions" parent="Theme.AppCompat.Light">
        <item name="android:background">#FFA500</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">18dp</item>

        <!--comment these margins out before running tests -->
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:layout_marginLeft">-4dp</item>
        <item name="android:layout_marginRight">-4dp</item>
    </style>


</resources>
